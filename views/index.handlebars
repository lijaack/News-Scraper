{{!-- navbar --}}
<nav class="navbar navbar-expand-lg navbar-dark  bg-dark " style="border-bottom: 1px solid rgba(46,62,72,.12)">
    <a class="navbar-brand" href="/">News Scraper</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse " id="navbarNavAltMarkup">
    <div class="navbar-nav ml-auto">
        <a class="nav-item nav-link" href="/saved">Saved Articles</a>
        <a class="nav-item nav-link" href="/scrape">Scrape</a>
        </div>
    </div>
</nav>

{{!-- jumbotron --}}
<div class="jumbotron jumbotron-fluid jumboimg" style="margin-bottom:0;">
  <div class="container">
      <br>
      <br>
    <h1 class="text-center text-light title">Gaming News</h1>
  </div>
</div>

{{!-- articles --}}
<section class="article-box">
    <div class="container">
        <h1 class="row-title">Trending Articles</h1> 
        <hr>
        {{#each article}}
            <div class="container">
            <article class="row">

                <div class="row">
                    <h2>{{title}}</h2>
                </div>
                <div class="row">
                    <div class="col-4">
                        <img src="{{image}}" style="width:100%">
                    </div>
                    <div class="col-8">
                        <a href="https://www.gamespot.com{{link}}"> visit article here</a>
                        <p>{{summary}}</p>
                        <button type="button" class="btn btn-primary" data-id={{id}}>
                            Save Article
                        </button>
                        <button type="button" class="btn btn-danger" data-id={{id}}>
                            Delete Article
                        </button>
                    </div>
                </div>
            </article>
            </div>
            <br>
        {{/each}}
    </div>
</section>